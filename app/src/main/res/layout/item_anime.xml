<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pieceImage"
            android:layout_width="125dp"
            android:layout_height="175dp"
            android:layout_margin="10sp"/>

        <Spinner
            android:id="@+id/userListSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_gravity="center"
            android:entries="@array/spinner_anime_list"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pieceRussianName"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="0dp"
            android:lineSpacingExtra="0dp"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/pieceEnglishName"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pieceKind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/pieceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Оценка:"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/pieceScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/detailsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Подробнее"/>
    </LinearLayout>

</LinearLayout>
